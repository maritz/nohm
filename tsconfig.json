{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "lib": ["es7"],
    "outDir": "./tsOut",
    "sourceMap": true,
    "declarationMap": true
  },
  "files": ["./ts/index.ts"],
  "exclude": ["./lib/*.js"]
}
